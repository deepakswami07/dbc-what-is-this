<div class="comment col-center col-10">
  <h4><i class="fa fa-user"></i> <%= comment.user ? comment.user.name : 'Default' %></h4>
  <p><%= comment.body %></p>

  <%= link_to 'Edit', edit_comment_path(comment) %>
  <%= link_to 'Delete', comment, method: :delete, data: {confirm: "You sure bub?" } %>

  <button data-id="<%comment.id%>" class="upvote">UpVote</button>

</div>
